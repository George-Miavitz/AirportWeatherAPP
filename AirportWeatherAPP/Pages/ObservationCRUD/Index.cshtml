@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Observation[0].Descriptor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observation[0].Timestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observation[0].Temperature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observation[0].WindSpeed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observation[0].WindDirection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observation[0].Visibility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observation[0].Org)
